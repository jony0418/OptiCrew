 <div class="addEmployeeBackground">
 <form id="newEmployeeForm" class="form-grid">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" required />

    <label for="shift">Shift:</label>
    <select id="shift" name="shift" required>
      <option value="">--Please choose an option--</option>
      <option value="Morning">Morning</option>
      <option value="Afternoon">Afternoon</option>
      <option value="Night">Night</option>
    </select>
  <label for="gender">Gender:</label>
  <div id="gender">
    <input type="radio" id="male" name="gender" value="Male" required />
    <label for="male">Male</label><br>
    <input type="radio" id="female" name="gender" value="Female" required />
    <label for="female">Female</label><br>
  </div>

  <label for="birth">Birth Date:</label>
  <input type="date" id="birth" name="birth" required />

  <label for="address">Address:</label>
  <input type="text" id="address" name="address" required />

  <label for="county">County:</label>
  <input type="text" id="county" name="county" required />

  <label for="zipCode">Zip Code:</label>
  <input type="text" id="zipCode" name="zipCode" required />

  <label for="city">City:</label>
  <input type="text" id="city" name="city" required />

  <label for="cel">Cell Phone:</label>
  <input type="tel" id="cel" name="cel" required />

  <label for="education">Education:</label>
  <input type="text" id="education" name="education" required />

  <label for="id_department">Department ID:</label>
  <input type="number" id="id_department" name="id_department" required />

  <label for="supervisor">Supervisor:</label>
  <input type="text" id="supervisor" name="supervisor" required />

  <label for="position">Position:</label>
  <input type="text" id="position" name="position" required />

  <label for="admissionDate">Admission Date:</label>
  <input type="date" id="admissionDate" name="admissionDate" required />

  <label for="vacations">Vacations (days):</label>
  <input type="number" id="vacations" name="vacations" required />

  <label for="code">Code:</label>
  <input type="text" id="code" name="code" required />

  <label for="active">Active:</label>
  <div id="active">
    <input type="radio" id="isActive" name="active" value="true" required />
    <label for="isActive">Yes</label><br>
    <input type="radio" id="isNotActive" name="active" value="false" required />
    <label for="isNotActive">No</label><br>
  </div>

  <label for="ssn">Social Security Number:</label>
  <input type="text" id="ssn" name="ssn" required />

  <label for="income">Income:</label>
  <input type="number" step="0.01" id="income" name="income" required />

  <label for="type">Type:</label>
  <input type="text" id="type" name="type" required />

  <label for="class">Class:</label>
  <input type="text" id="class" name="class" required />

  <button type="submit">Submit</button>
  </form>
  </div>

  <script src="./js/addEmployee.js"></script>
